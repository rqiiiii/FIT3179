{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 1000,        
  "data": {
    "url": "data/deaths_injuries_accident(2000-2021).csv"
  },

  "params": [
    {
      "name": "endYear",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 2001,
        "max": 2021,
        "step": 1,
        "name": "Year up to:"
      }
    }
  ],

  "transform": [
    {"filter": "year(datum.Year) <= endYear"}
  ],

  "facet": {
    "field": "Condition",
    "type": "nominal",
    "header": {
      "labelFontSize": 18,
      "titleFontSize": 22,
      "labelFontWeight": "bold"
    },
    "spacing": 200       
  },

  "spec": {
    "width": 390,        
    "height": 400 ,
    "layer": [
      {
        "mark": {"type": "area", "interpolate": "monotone"},
        "encoding": {
          "x": {"field": "Year", "type": "temporal", "axis": {"title": "Year"}},
          "y": {
            "aggregate": "sum",
            "field": "Value",
            "type": "quantitative",
            "axis": {"title": "Count"}
          },
          "color": {
            "field": "Type of road user",
            "type": "nominal",
            "title": "Road User",
            "scale": {
              "domain": [
                "Cyclists",
                "Lorry drivers",
                "Motorcar drivers",
                "Motorcyclists",
                "Others",
                "Passengers",
                "Pedestrians",
                "Pillion riders",
                "Taxi/Bus drivers"
              ],
              "range": [
                "#66c2a5",
                "#fc8d62",
                "#8da0cb",
                "#e78ac3",
                "#a6d854",
                "#ffd92f",
                "#e5c494",
                "#b3b3b3",
                "#6a1ea8"
              ]
            }
          }
          ,
          "tooltip": [
            {
              "field": "Year",
              "type": "temporal",
              "title": "Year :",
              "format": "%Y"
            },
            {
              "field": "Type of road user",
              "type": "nominal",
              "title": "Road User :"
            },
            {
              "field": "Condition",
              "type": "nominal",
              "title": "Condition :"
            },
            {
              "field": "Value",
              "type": "quantitative",
              "title": "Number of Accidents :",
              "format": ","
            }
          ]
        }
      },
      {
        "data": {
          "values": [
            {
              "Year": "2004",
              "Label": "Peak of Accidents",
              "Condition": "Injuries"
            }
          ]
        },
        "transform": [
          {"filter": "datum.Condition == 'Injuries'"},
          {"filter": "year(datum.Year) <= endYear"}
        ],
        "mark": {
          "type": "text",
          "align": "left",
          "dx": 12,
          "dy": -140,
          "fontSize": 13,
          "fontWeight": "bold",
          "color": "black"
        },
        "encoding": {
          "x": {"field": "Year", "type": "temporal"},
          "text": {"field": "Label"}
        }
      },
      {
        "data": {
          "values": [
            {
              "Year": "2004",
              "Label": "Peak accident",
              "Condition": "Deaths"
            }
          ]
        },
        "transform": [
          {"filter": "datum.Condition == 'Deaths'"},
          {"filter": "year(datum.Year) <= endYear"}
        ],
        "mark": {"type": "rule", "color": "black", "strokeWidth": 2},
        "encoding": {
          "x": {"field": "Year", "type": "temporal"}
        }
      }   
    ]
  }
  
}
