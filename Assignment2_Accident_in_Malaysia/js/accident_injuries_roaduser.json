{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Interactive pie chart of road accident injuries by vehicle type by year (no text labels).",
  "width": 400,
  "height": 400,

  "params": [
    {
      "name": "YearFilter",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2019,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],

  "data": {
    "url": "https://gist.githubusercontent.com/rqiiiii/bb90ab292705f2b15fb99fa0ee02e205/raw/12ae48c07aef2d276eaefcfcda78c886756a8ee5/accident_injuries_roaduser.csv",
    "format": {"type": "csv"}
  },

  "transform": [
    {"filter": "datum.Year == YearFilter"},
    {
      "aggregate": [
        {"op": "sum", "field": "Value", "as": "TotalInjuries"}
      ],
      "groupby": ["Type of Vehicle"]
    }
  ],

  "encoding": {
    "theta": {"field": "TotalInjuries", "type": "quantitative"},
    "color": {
      "field": "Type of Vehicle",
      "type": "nominal",
      "title": "Vehicle Type",
      "legend": {"orient": "right"}
    },
    "tooltip": [
      {"field": "Type of Vehicle", "title": "Vehicle"},
      {"field": "TotalInjuries", "title": "Injuries"},
      {"param": "YearFilter", "title": "Year"}
    ]
  },

  "mark": {"type": "arc", "outerRadius": 150, "innerRadius": 0},

  "view": {"stroke": null}
}
