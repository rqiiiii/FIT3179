{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 700,
  "height": 450,
  "data": {
    "url": "data/road_accident_severity.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"filter": "datum.Year >= 2011 && datum.Year <= 2021"},
    {
      "fold": [
        "Fatal Accidents",
        "Serious Accidents",
        "Minor Accidents",
        "Damage-Only Accidents"
      ],
      "as": ["Severity", "Count"]
    },
    {
      "window": [{"op": "rank", "as": "Rank"}],
      "sort": [
        {"field": "Count", "order": "descending"},
        {"field": "States", "order": "ascending"}
      ],
      "groupby": ["Year", "Severity"]
    },
    {"filter": "datum.Severity == severitySelect"},
    {
      "lookup": "States",
      "from": {
        "data": {
          "values": [
            {"States": "Johor", "flagURL": "https://raw.githubusercontent.com/rqiiiii/FIT3179/main/Assignment2_Accident_in_Malaysia/data/image/Johor-37.png"},
            {"States": "Selangor", "flagURL": "https://raw.githubusercontent.com/rqiiiii/FIT3179/main/Assignment2_Accident_in_Malaysia/data/image/Selangor-37.png"},
            {"States": "Kedah", "flagURL": "https://raw.githubusercontent.com/rqiiiii/FIT3179/main/Assignment2_Accident_in_Malaysia/data/image/Kedah-37.png"},
            {"States": "Pulau Pinang", "flagURL": "https://raw.githubusercontent.com/rqiiiii/FIT3179/main/Assignment2_Accident_in_Malaysia/data/image/Penang-37.png"},
            {"States": "Perak", "flagURL": "https://raw.githubusercontent.com/rqiiiii/FIT3179/main/Assignment2_Accident_in_Malaysia/data/image/Perak-37.png"},
            {"States": "Perlis", "flagURL": "https://raw.githubusercontent.com/rqiiiii/FIT3179/main/Assignment2_Accident_in_Malaysia/data/image/Perlis-37.png"},
            {"States": "Kelantan", "flagURL": "https://raw.githubusercontent.com/rqiiiii/FIT3179/main/Assignment2_Accident_in_Malaysia/data/image/Kelantan-37.png"},
            {"States": "Terengganu", "flagURL": "https://raw.githubusercontent.com/rqiiiii/FIT3179/main/Assignment2_Accident_in_Malaysia/data/image/Terengganu-37.png"},
            {"States": "Pahang", "flagURL": "https://raw.githubusercontent.com/rqiiiii/FIT3179/main/Assignment2_Accident_in_Malaysia/data/image/Pahang-37.png"},
            {"States": "Melaka", "flagURL": "https://raw.githubusercontent.com/rqiiiii/FIT3179/main/Assignment2_Accident_in_Malaysia/data/image/Malacca-37.png"},
            {"States": "Negeri Sembilan", "flagURL": "https://raw.githubusercontent.com/rqiiiii/FIT3179/main/Assignment2_Accident_in_Malaysia/data/image/Negeri-Sembilan-37.png"},
            {"States": "Sabah", "flagURL": "https://raw.githubusercontent.com/rqiiiii/FIT3179/main/Assignment2_Accident_in_Malaysia/data/image/Sabah-37.png"},
            {"States": "Sarawak", "flagURL": "https://raw.githubusercontent.com/rqiiiii/FIT3179/main/Assignment2_Accident_in_Malaysia/data/image/Sarawak-37.png"},
            {"States": "Kuala Lumpur", "flagURL": "https://raw.githubusercontent.com/rqiiiii/FIT3179/main/Assignment2_Accident_in_Malaysia/data/image/Kuala-Lumpur-37.png"}
          ]
        },
        "key": "States",
        "fields": ["flagURL"]
      }
    }
  ],
  "params": [
    {
      "name": "severitySelect",
      "value": "Damage-Only Accidents",
      "bind": {
        "input": "select",
        "options": [
          "Fatal Accidents",
          "Serious Accidents",
          "Minor Accidents",
          "Damage-Only Accidents"
        ],
        "name": "Select Severity: "
      }
    }
  ],
  "layer": [
    {
            "data": {
        "values": [
          {
            "Severity": "Fatal Accidents",
            "Line1": "🚨 Fatal accidents",
            "Line2": "are the most severe,",
            "Line3": "resulting in loss of ",
            "Line4": "life and serious ",
            "Line5": "consequences,",
            "Line6": "highlighting",
            "Line7": "critical road safety."
          },
          {
            "Severity": "Serious Accidents",
            "Line1": "⚠️ Serious accidents",
            "Line2": "cause major injuries,",
            "Line3": "varying in frequency ",
            "Line4": "across different roads,",
            "Line5": "reflecting differences",
            "Line6": "in infrastructure and",
            "Line7": "response."
          },
          {
            "Severity": "Minor Accidents",
            "Line1": "🚗 Minor accidents",
            "Line2": "mostly cause vehicle",
            "Line3": "or property damage,",
            "Line4": "rarely result in ",
            "Line5": "serious injuries,",
            "Line6": " and have relatively ",
            "Line7": "low costs."
          },
          {
            "Severity": "Damage-Only Accidents",
            "Line1": "💥 Damage-only accidents",
            "Line2": "involve collisions that",
            "Line3": "cause vehicle or property",
            "Line4": "damage without injuries,",
            "Line5": "typically resulting",
            "Line6": "from minor incidents. ",
            "Line7": " "
          }
        ]
      },
"transform": [
        {"filter": "datum.Severity == severitySelect"}
      ],
      "layer": [
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "x": 720,
            "y": 150,
            "fontSize": 14,
            "fontWeight": "bold",
            "color": "#333333"
          },
          "encoding": {
            "text": {"field": "Line1", "type": "nominal"}
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "x": 745,
            "y": 170,
            "fontSize": 14,
            "fontWeight": "bold",
            "color": "#333333"
          },
          "encoding": {
            "text": {"field": "Line2", "type": "nominal"}
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "x": 745,
            "y": 190,
            "fontSize": 14,
            "fontWeight": "bold",
            "color": "#333333"
          },
          "encoding": {
            "text": {"field": "Line3", "type": "nominal"}
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "x": 745,
            "y": 210,
            "fontSize": 14,
            "fontWeight": "bold",
            "color": "#333333"
          },
          "encoding": {
            "text": {"field": "Line4", "type": "nominal"}
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "x": 745,
            "y": 230,
            "fontSize": 14,
            "fontWeight": "bold",
            "color": "#333333"
          },
          "encoding": {
            "text": {"field": "Line5", "type": "nominal"}
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "x": 745,
            "y": 250,
            "fontSize": 14,
            "fontWeight": "bold",
            "color": "#333333"
          },
          "encoding": {
            "text": {"field": "Line6", "type": "nominal"}
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "x": 745,
            "y": 270,
            "fontSize": 14,
            "fontWeight": "bold",
            "color": "#333333"
          },
          "encoding": {
            "text": {"field": "Line7", "type": "nominal"}
          }
        }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "top",
        "dx": 10,
        "dy": 10,
        "fontSize": 14,
        "fontWeight": "bold",
        "color": "#333333",
        "lineHeight": 40,
        "limit": 300
      },
      "encoding": {
        "text": {"field": "Annotation", "type": "nominal"}
      }
    },
    {
      "mark": {"type": "line", "strokeWidth": 2, "opacity": 0.9},
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "axis": {"labelAngle": 0, "title": "Year", "grid": false}
        },
        "y": {
          "field": "Rank",
          "type": "quantitative",
          "scale": {"reverse": true, "domain": [1, 15]},
          "axis": {"title": "Rank (1 = Highest)", "tickCount": 14, "grid": true}
        },
        "color": {
          "field": "States",
          "type": "nominal",
          "legend": {"title": "State", "columns": 2},
          "scale": {
            "domain": [
              "Johor", "Selangor", "Kedah", "Pulau Pinang", "Perak",
              "Perlis", "Kelantan", "Terengganu", "Pahang",
              "Melaka", "Negeri Sembilan", "Sabah", "Sarawak", "Kuala Lumpur"
            ],
            "range": [
              "#0033A0",  
              "#FFD700",  
              "#006A4E",  
              "#0071BC",  
              "#5A5A5A",  
              "#00AEEF",  
              "#D71A28",  
              "#301934",  
              "#B8860B",  
              "#FF0000",  
              "#F4C300",  
              "#0072CE", 
              "#C8102E",  
              "#000000"   
            ]
          }
        },
        "detail": {"field": "States", "type": "nominal"},
        "tooltip": [
          {"field": "States", "type": "nominal", "title": "State"},
          {"field": "Year", "type": "ordinal"},
          {"field": "Rank", "type": "quantitative", "title": "Rank"},
          {"field": "Count", "type": "quantitative", "title": "Accident Count", "format": ","}
        ]
      }
    },
    { 
      "mark": {
        "type": "circle", 
        "size": 700, 
        "color": "white", 
        "stroke": "black", 
        "strokeWidth": 2, 
        "tooltip": null, 
        "interactive": false
      }, 
      "encoding": { 
        "x": {"field": "Year", "type": "ordinal"}, 
        "y": {"field": "Rank", "type": "quantitative", "scale": {"reverse": true}} 
      } 
    },
    {
      "mark": {
        "type": "image",
        "width": 60,
        "height": 60,
        "aspect": true
      },
      "encoding": {
        "x": {"field": "Year", "type": "ordinal"},
        "y": {
          "field": "Rank",
          "type": "quantitative",
          "scale": {"reverse": true}
        },
        "url": {"field": "flagURL", "type": "nominal"},
        "tooltip": [
          {"field": "States", "type": "nominal", "title": "State :"},
          {"field": "Year", "type": "ordinal", "title": "Year :"},
          {"field": "Rank", "type": "quantitative", "title": "Rank :"},
          {"field": "Count", "type": "quantitative", "title": "Number of Accidents :", "format": ","}
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"domainWidth": 1}
  }
}