{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 950,
  "height": 500,
  "projection": { "type": "equalEarth" },
  "config": { "view": { "stroke": null } },

  "layer": [
    {
      "data": {
        "graticule": {"step": [20, 20]}
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#b0bec5",
        "strokeWidth": 0.6
      }
    },
    {
      "data": {
        "url": "js/ne_10m_admin_0_countries.json",
        "format": { "type": "topojson", "feature": "ne_10m_admin_0_countries" }
      },
      "transform": [
        {
          "lookup": "properties.ISO_A2",
          "from": {
            "data": {
              "url": "data/road_death_country_2021.csv"
            },
            "key": "flagCode",
            "fields": ["EstimatedRoadTrafficDeathRateCountries_2021"]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "color": {
          "field": "EstimatedRoadTrafficDeathRateCountries_2021",
          "type": "quantitative",
          "title": "Deaths per 100,000",
          "scale": {
            "type": "threshold",
            "domain": [10, 20, 30],
            "range": ["#f7b072", "#f05030", "#f20c0c", "#a60707"]
          },
          "legend": {
            "title": "Deaths per 100,000 population",
            "orient": "bottom",
            "direction": "horizontal"
          }
        },
        "tooltip": [
          { "field": "properties.NAME", "title": "Country" },
          { "field": "EstimatedRoadTrafficDeathRateCountries_2021", "title": "Death Rate (per 100,000)" }
        ]
      }
    },
    {
      "data": {},
      "mark": { "type": "geoshape", "stroke": "#aaa", "strokeWidth": 0.5 },
      "transform": [
        {
          "calculate": "datum",
          "as": "geometry"
        }
      ]
    }
  ]
}
