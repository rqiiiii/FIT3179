{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 400,
  "projection": {
    "type": "mercator",
    "center": [108, 4],
    "scale": 2300  },
  "layer": [
    {
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "lightblue"}
    },
    {
      "data": {"graticule": {"step": [10, 10]}},
      "mark": {"type": "geoshape", "stroke": "gray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jnewbery/CartogramMalaysia/9ac25c828e0306dfa2c2869f98eb2b357da69764/public/data/malaysia-states.topojson",
        "format": {"type": "topojson", "feature": "states"}
      },
      "transform": [
        {
          "lookup": "properties.Name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/rqiiiii/FIT3179/refs/heads/main/HW9/data/malaysia_accidents_2011.csv",
              "format": {"type": "csv"}
            },
            "key": "States",
            "fields": ["Accident Rate"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "black"},
      "encoding": {
        "color": {
          "field": "Accident Rate",
          "type": "quantitative",
          "title": "Accidents per 10k Vehicles",
          "scale": {"scheme": "Reds"}
        },
        "tooltip": [
          {"field": "properties.Name", "title": "State"},
          {"field": "Accident Rate", "title": "Accident Rate per 10k Vehicles"}
        ]
      }
    }
  ],
  "title": "Road Accidents in Malaysia per 10,000 Vehicles (Year 2011)"
}
