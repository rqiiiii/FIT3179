{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "projection": {
    "type": "mercator",
    "center": [109, 4],
    "scale": 2000
  },
  "layer": [
    {
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "lightblue"}
    },
    {
      "data": {"graticule": {"step": [10, 10]}},
      "mark": {"type": "geoshape", "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jnewbery/CartogramMalaysia/9ac25c828e0306dfa2c2869f98eb2b357da69764/public/data/malaysia-states.topojson",
        "format": {"type": "topojson", "feature": "states"}
      },
      "transform": [
        {
          "lookup": "properties.Name",
          "from": {
            "data": {
              "url": "https://gist.githubusercontent.com/rqiiiii/ceb2648e546447706e8c496c91fcc911/raw/2d87196f7cbe1b63c0361f7ca02b85b9357bea84/malaysia_accident_2011.csv",
              "format": {"type": "csv"}
            },
            "key": "States",
            "fields": ["Accident Rate"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "black"},
      "encoding": {
        "color": {
          "field": "Accident Rate",
          "type": "quantitative",
          "title": "Accidents per 10k Vehicles",
          "scale": {"scheme": "Reds"}
        },
        "tooltip": [
          {"field": "properties.Name", "title": "State"},
          {"field": "Accident Rate", "title": "Accident Rate per 10k Vehicles"}
        ]
      }
    }
  ],
  "title": "Road Accidents in Malaysia per 10,000 Vehicles (Year 2011)"
}
